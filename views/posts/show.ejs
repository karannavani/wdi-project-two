<div class="columns is-mobile is-multiline is-centered">
  <div class="column is-3-desktop is-9-tablet is-12-mobile">
    <div>
      <h1 class="title is-2"><%= post.title %> </h1>
      <h1 class="subtitle is-5"><%= post.subtitle %> </h1>
      <h1 class="title is-5 author"><%= post.author%> </h1>
      <p class="subtitle is-6 date"><%= post.date%></p>
    </div>
  </div>
  <div class="column is-7-desktop is-9-tablet is-12-mobile">
    <img src=<%= post.coverPic %> alt="">
  </div>
</div>


<div class="columns is-mobile is-centered is-multiline">
  <div class="column is-10">
    <div class="content is-medium">
      <p><%= post.content %></p>
    </div>
  </div>

  <hr/>
  <% if (locals.isLoggedIn) { %>
    <div class="column is-12">
      <div class="section">
        <div class="level">
          <div class="level-left">
            <a class="button is-warning" href="/posts/<%= post.id %>/edit">Edit</a>
          </div>
          <div class="level-right">
            <form class="" action="/posts/<%= post.id %>" method="POST">
              <button class="button is-danger">Delete</button>
              <input type="hidden" name="_method" value="DELETE">
            </form>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>
