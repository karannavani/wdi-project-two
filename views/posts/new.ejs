<form method="POST" action="/posts">

  <div class="field">
    <label class="label" for="title">Title</label>
    <div class="control">
      <input name="title" class="input" type="text">
    </div>
  </div>
  <div class="field">
    <label class="label" for="subtitle">Subtitle</label>
    <div class="control">
      <input name="subtitle" class="input" type="text">
    </div>
  </div>
  <div class="field">
    <label class="label" for="content"></label>
    <div class="control">
      <textarea class="textarea" name="content" placeholder="Do some magic" rows="30"></textarea>
    </div>
  </div>

  <input name="author" class="input" type="hidden" value="<%= locals.user.username %>">
  <input name="date" class="input" type="hidden" value="<%= new Date().toLocaleString('en-gb', { month: 'short', day: '2-digit' }) %>">
  <button class="button is-success">Publish</button>

</form>
